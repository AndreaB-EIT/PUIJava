<AnchorPane fx:id="anchorPane" prefHeight="420.0" prefWidth="570.0" styleClass="borders" stylesheets="@application.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ArticleEditController">
   <children>
      <HBox AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="133.0" onMouseClicked="#onImageClicked" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </ImageView>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <Label prefWidth="80.0" text="Title:">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="titleBox" onKeyReleased="#onNewChar" prefWidth="300.0" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox>
                     <children>
                        <Label prefWidth="80.0" text="Subtitle:">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="subtitleBox" onKeyReleased="#onNewChar" prefWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label prefWidth="80.0" text="Category:">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <ComboBox fx:id="categoriesList" onAction="#onNewChar" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <VBox alignment="TOP_RIGHT" layoutX="519.0" layoutY="-7.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="8.0">
         <children>
            <Label fx:id="showingBA" text="Showing: ">
            	<padding>
                  <Insets top="96.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      
      <HTMLEditor fx:id="content_html" onKeyReleased="#onNewChar" onMouseExited="#onNewChar" prefHeight="200.0" prefWidth="506.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="125.0" />
      
      <TextArea fx:id="content_text" disable="true" layoutX="10.0" layoutY="125.0" onKeyReleased="#onNewChar" prefHeight="200.0" prefWidth="200.0" visible="false" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="125.0" />

      <HBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <children>
            <AnchorPane prefWidth="550.0">
               <children>
                  <HBox AnchorPane.leftAnchor="0.0">
                     <children>
                        <Button fx:id="btn_back" mnemonicParsing="false" onAction="#exitForm" style="-fx-background-color: #8181F7;" text="Back" textFill="#f2f2f2">
                           <HBox.margin>
                              <Insets bottom="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btn_saveAndBack" mnemonicParsing="false" onAction="#onSaveAndBack" style="-fx-background-color: #8181F7;" text="Send &amp; Back" textFill="#f2f2f2">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btn_saveToFile" mnemonicParsing="false" onAction="#onSaveToFile" style="-fx-background-color: #8181F7;" text="Save to File" textFill="#f2f2f2">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" AnchorPane.rightAnchor="0.0">
                     <children>
                        <Button fx:id="btn_TextHtml" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#onTextHtml" style="-fx-background-color: #8181F7;" text="Text/HTML" textFill="#f2f2f2">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btn_AbstractBody" alignment="TOP_RIGHT" mnemonicParsing="false" onAction="#onAbstractBody" style="-fx-background-color: #8181F7;" text="Abstract/Body" textFill="#f2f2f2">
                           <HBox.margin>
                              <Insets bottom="5.0" left="5.0" top="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
